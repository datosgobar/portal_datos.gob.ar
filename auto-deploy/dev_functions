bcpvf (){
	# Crear capertas para volumenes
	mkdir -p $HOME/ckan_volumes/data $HOME/ckan_volumes/config $HOME/ckan_volumes/pgdata
}

server_is_running () {
	if [[ "$#" -gt 0]]; then
		if ping -c 10 $1; then
    		echo "[OK]"
		fi
	fi
	echo "[FALLO]"
}

check_ckan_status() {
	CKAN_IP=$(docker inspect --format '{{ .NetworkSettings.IPAddress }}' ckan)
	PG_IP=$(docker inspect --format '{{ .NetworkSettings.IPAddress }}' pg-ckan)
	SOLR_IP=$(docker inspect --format '{{ .NetworkSettings.IPAddress }}' solr)
	echo "CKAN Status... $(server_is_running ${CKAN_IP})"
	echo "POSTGRES Status... $(server_is_running ${PG_IP})"
	echo "SOLR Status... $(server_is_running ${SOLR_IP})"
}